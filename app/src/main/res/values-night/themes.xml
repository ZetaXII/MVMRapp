<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MVMRapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item> <!-- Colore nero per la barra di stato -->
        <item name="android:textColor">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <!-- Stile personalizzato per i bottoni nel tema scuro -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rounded_white_button</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>
</resources>